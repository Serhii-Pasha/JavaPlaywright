<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Playwright Test Suite" verbose="1" parallel="tests" thread-count="2">

    <listeners>
        <listener class-name="com.example.framework.listeners.TestListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Smoke Tests" group-by-instances="false">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.example.framework.tests.PlaywrightHomeTests"/>
        </classes>
    </test>

    <test name="Regression Tests" group-by-instances="false">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.example.framework.tests.PlaywrightHomeTests"/>
        </classes>
    </test>

</suite>

